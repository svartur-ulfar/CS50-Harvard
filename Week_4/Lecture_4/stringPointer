#include <stdio.h>

int main(void)
{
    char *s = "HI!"; // basically the type is actually char* (data_type*)

    printf("%c", *s); // basically * of the char* variable, gives the value on the address of s
    printf("%c", *(s + 1)); // can do pointers arithmetics to get to another address this case, the next one
    printf("%c\n", *(s + 2));

    /* s[1] is the same as *(s + 1)   */
}
